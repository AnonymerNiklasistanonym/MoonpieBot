{
    "$schema": "./customCommands.schema.json",
    "commands": [
        {
            "name": "Custom command 1 > Basic",
            "channels": [
                "#salk1n616"
            ],
            "message": "Test command was called $(count) times (1-10=$(random-1-10))",
            "regexString": "!testBasic",
            "count": 0,
            "userLevel": "everyone"
        },
        {
            "name": "Custom command 2 > RegEx groups",
            "channels": [
                "#salk1n616"
            ],
            "message": "Test command query is: '$(group-1)'",
            "regexString": "!test(?:\\s*(.*?)\\s*$)?",
            "count": 20,
            "userLevel": "everyone"
        },
        {
            "name": "Custom command 3 > Reply to user",
            "channels": [
                "#salk1n616"
            ],
            "message": "@$(user) pong",
            "regexString": "!ping",
            "count": 0,
            "userLevel": "everyone"
        },
        {
            "name": "Custom command 4.1 > Using the Twitch api > get game",
            "channels": [
                "#salk1n616"
            ],
            "message": "Go check out $(group-1) at https://www.twitch.tv/$(group-1) <3 They were last playing $(twitch-channel_game=$(group-1))",
            "regexString": "^!so\\s+@?(\\S+)\\s*(?:.*)$",
            "count": 3,
            "userLevel": "mod"
        },
        {
            "name": "Custom command 4.2 > Using the Twitch api > get follow age",
            "channels": [
                "#salk1n616"
            ],
            "message": "@$(user) You followed the channel since $(twitch-follow_age)",
            "regexString": "!followage",
            "count": 0,
            "userLevel": "everyone"
        },
        {
            "name": "Custom command 4.3 > Using the Twitch api > set title [TODO:scopes]",
            "channels": [
                "#salk1n616"
            ],
            "message": "@$(user) You updated the title to $(twitch-set_title=$(group-1))",
            "regexString": "^!settitle\\s+(.*?)\\s*$",
            "count": 0,
            "userLevel": "mod"
        },
        {
            "name": "Custom command 4.4 > Using the Twitch api > set game [TODO:scopes]",
            "channels": [
                "#salk1n616"
            ],
            "message": "@$(user) You updated the game to $(twitch-set_title=$(group-1))",
            "regexString": "^!setgame\\s+(.*?)\\s*$",
            "count": 0,
            "userLevel": "mod"
        }
    ]
}

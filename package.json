{
    "name": "moonpiebot",
    "version": "1.0.0",
    "description": "A custom twitch bot",
    "main": "dist/src",
    "directories": {
        "test": "tests"
    },
    "scripts": {
        "start": "cross-env NODE_PATH=./dist NODE_ENV=production node .",
        "build": "rm -fr ./dist/* && tsc",
        "test": "cross-env NODE_PATH=. nyc mocha -- \"tests/**/*.test.ts\"",
        "dev": "cross-env NODE_PATH=./dist nodemon --verbose",
        "build:dev": "tsc --sourceMap --removeComments false --pretty",
        "test:dev": "cross-env NODE_PATH=. nyc mocha -- -r dotenv/config \"tests/**/*.test.ts\"",
        "mocha": "cross-env NODE_PATH=. mocha -r dotenv/config",
        "lint": "eslint --ext .js,.ts .",
        "lint:fix": "eslint --fix --ext .js,.ts ."
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/AnonymerNiklasistanonym/MoonpieBot.git"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/AnonymerNiklasistanonym/MoonpieBot/issues"
    },
    "homepage": "https://github.com/AnonymerNiklasistanonym/MoonpieBot#readme",
    "devDependencies": {
        "@istanbuljs/nyc-config-typescript": "^1.0.2",
        "@types/chai": "^4.3.0",
        "@types/mocha": "^9.1.0",
        "@types/node": "^17.0.18",
        "@types/sinon": "^10.0.11",
        "@types/sqlite3": "^3.1.8",
        "@types/tmi.js": "^1.8.1",
        "@typescript-eslint/eslint-plugin": "^5.12.0",
        "@typescript-eslint/parser": "^5.12.0",
        "chai": "^4.3.6",
        "cross-env": "^7.0.3",
        "dotenv": "^16.0.0",
        "eslint": "^8.9.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-security": "^1.4.0",
        "husky": "^7.0.4",
        "lint-staged": "^12.3.4",
        "mocha": "^9.2.0",
        "nodemon": "^2.0.15",
        "nyc": "^15.1.0",
        "prettier": "^2.5.1",
        "sinon": "^13.0.1",
        "source-map-support": "^0.5.21",
        "ts-node": "^10.5.0",
        "typescript": "^4.5.5"
    },
    "dependencies": {
        "sqlite3": "^4.2.0",
        "tmi.js": "^1.8.5",
        "winston": "^3.6.0"
    }
}

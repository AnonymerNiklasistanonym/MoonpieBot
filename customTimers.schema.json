{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$ref": "#/definitions/CustomTimersJson",
    "definitions": {
        "CustomTimersJson": {
            "type": "object",
            "properties": {
                "$schema": {
                    "type": "string",
                    "description": "Pointer to the schema against which this document should be validated (Schema URL/path)."
                },
                "timers": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/CustomTimer"
                    },
                    "description": "All custom timers."
                }
            },
            "required": [
                "timers"
            ],
            "additionalProperties": false,
            "description": "Structured data object that contains all information about custom timers."
        },
        "CustomTimer": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string",
                    "description": "ID of the timer."
                },
                "channels": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "description": "The channels where the timer should be active."
                },
                "message": {
                    "type": "string",
                    "description": "The message that should be sent (will be parsed by the message parser)."
                },
                "cronString": {
                    "type": "string",
                    "description": "The cron(job) string. For more information/help you can for example use this website: https://crontab.cronhub.io/."
                }
            },
            "required": [
                "id",
                "channels",
                "message",
                "cronString"
            ],
            "additionalProperties": false,
            "description": "Represents a custom timer."
        }
    }
}
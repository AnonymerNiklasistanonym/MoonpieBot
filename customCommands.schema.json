{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$ref": "#/definitions/CustomCommandsJson",
    "definitions": {
        "CustomCommandsJson": {
            "type": "object",
            "properties": {
                "$schema": {
                    "type": "string",
                    "description": "Pointer to the schema against which this document should be validated (Schema URL/path)."
                },
                "commands": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/CustomCommand"
                    },
                    "description": "The custom commands."
                },
                "data": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/CustomCommandData"
                    },
                    "description": "The custom command data."
                }
            },
            "required": [
                "commands"
            ],
            "additionalProperties": false,
            "description": "Structured, serializable data object that contains all information about custom commands and their data."
        },
        "CustomCommand": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string",
                    "description": "ID of the command."
                },
                "channels": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "description": "The channels where the timer should be active."
                },
                "message": {
                    "type": "string",
                    "description": "The message that should be sent."
                },
                "regexString": {
                    "type": "string",
                    "description": "The regex string that is used to check for the command."
                },
                "userLevel": {
                    "$ref": "#/definitions/CustomCommandUserLevel",
                    "description": "The allowed user level."
                },
                "count": {
                    "type": "number",
                    "description": "The number of times the command got called."
                },
                "timestampLastExecution": {
                    "type": "number",
                    "description": "The timestamp of the last time the command was executed."
                },
                "cooldownInS": {
                    "type": "number",
                    "description": "The number of seconds between a command can not be used after it was used."
                },
                "description": {
                    "type": "string",
                    "description": "A description for the command."
                }
            },
            "required": [
                "id",
                "channels",
                "message",
                "regexString"
            ],
            "additionalProperties": false,
            "description": "Represents a custom command."
        },
        "CustomCommandUserLevel": {
            "type": "string",
            "enum": [
                "broadcaster",
                "mod",
                "vip",
                "everyone"
            ],
            "description": "All the possible supported user levels of a single custom command."
        },
        "CustomCommandData": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string",
                    "description": "The unique ID."
                },
                "value": {
                    "type": [
                        "string",
                        "number"
                    ],
                    "description": "The actual value."
                },
                "description": {
                    "type": "string",
                    "description": "A description."
                }
            },
            "required": [
                "id",
                "value"
            ],
            "additionalProperties": false,
            "description": "Represents a custom command data value."
        }
    }
}
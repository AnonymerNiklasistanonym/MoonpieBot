{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "lib": ["ES6", "ES2022", "DOM"],
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node16",
        "sourceMap": false,
        "rootDir": "src",
        "outDir": "dist",
        "baseUrl": ".",
        "pretty": true,
        "removeComments": true,
        "resolveJsonModule": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true
    },
    "include": [
        "src/**/*.mts"
    ],
    "typedocOptions": {
        "entryPointStrategy": "Expand",
        "entryPoints": [
            "src"
        ],
        "out": "docs",
        "umlClassDiagram": {
            "type": "detailed",
            "location": "local",
            "format": "svg"
        }
    }
}

{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2018",
        "lib": ["es2019"],
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "sourceMap": false,
        "outDir": "dist",
        "baseUrl": ".",
        "pretty": true,
        "removeComments": true,
        "resolveJsonModule": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true
    },
    "include": [
        "src/**/*"
    ],
    "typedocOptions": {
        "entryPointStrategy": "Expand",
        "entryPoints": ["src"],
        "out": "docs",
        "umlClassDiagram": {
            "type": "detailed",
            "location": "local",
            "format": "svg"
        }
    }
}
